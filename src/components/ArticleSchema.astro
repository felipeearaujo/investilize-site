---
// CORREÇÃO 1.1: Importamos o tipo ImageMetadata para a imagem
import type { ImageMetadata } from 'astro:assets';

export interface Props {
  title: string;
  description: string;
  publishDate: Date;
  // CORREÇÃO 1.2: A imagem não é uma string, é um objeto
  imagePath: ImageMetadata;
}

const { title, description, publishDate, imagePath } = Astro.props;

// CORREÇÃO 1.3: Acessamos a propriedade .src do objeto da imagem
const imageUrl = new URL(imagePath.src, Astro.site).href;
const canonicalURL = Astro.url.href;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL
  },
  "headline": title,
  "description": description,
  "image": imageUrl, // Agora a URL estará correta
  "author": {
    "@type": "Organization",
    "name": "Investilize",
    // CORREÇÃO 2: Adicionamos a URL da organização como autora
    "url": new URL('/', Astro.site).href
  },
  "publisher": {
    "@type": "Organization",
    "name": "Investilize",
    "logo": {
      "@type": "ImageObject",
      "url": new URL('/logo.png', Astro.site).href
    }
  },
  "datePublished": publishDate.toISOString()
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(schema)} />