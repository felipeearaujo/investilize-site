---
// src/components/ferramentas/CalculadoraReserva.astro
---

<div class="calculator-card">
    <div class="inputs-grid">
        <div class="input-field">
            <label>Custo de Vida Mensal (R$):</label>
            <input type="number" id="custoMensal" value="3000" />
            <small>Soma de aluguel, contas, mercado, etc.</small>
        </div>

        <div class="input-field">
            <label>Meses de Cobertura:</label>
            <select id="mesesCobertura">
                <option value="3">3 Meses (Estabilidade Alta)</option>
                <option value="6" selected>6 Meses (Padrão CLT)</option>
                <option value="12">12 Meses (Autônomo / Freelancer)</option>
            </select>
        </div>

        <div class="input-field">
            <label>Valor já Poupado (R$):</label>
            <input type="number" id="valorPoupado" value="0" />
        </div>
    </div>

    <div id="reservaResult" class="result-box" style="display: none;">
        </div>
</div>

<style>
    .calculator-card {
        background: #fff;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        border: 1px solid #eee;
    }
    .inputs-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    .input-field label {
        display: block;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #374151;
    }
    .input-field input, .input-field select {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e5e7eb;
        border-radius: 8px;
        font-size: 1rem;
    }
    .result-box {
        background: #f0f7ff;
        padding: 1.5rem;
        border-radius: 10px;
        text-align: center;
        border-left: 5px solid #2563eb;
    }
    @media (max-width: 600px) {
        .inputs-grid { grid-template-columns: 1fr; }
    }
</style>

<script is:inline>
  function initReservaCalc() {
    const inputs = ['custoMensal', 'mesesCobertura', 'valorPoupado'];
    const resultDiv = document.getElementById('reservaResult');
    const formatter = new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' });

    function calcular() {
        const custo = parseFloat(document.getElementById('custoMensal').value) || 0;
        const meses = parseInt(document.getElementById('mesesCobertura').value) || 0;
        const poupado = parseFloat(document.getElementById('valorPoupado').value) || 0;

        const meta = custo * meses;
        const falta = Math.max(0, meta - poupado);
        const progresso = meta > 0 ? Math.min(100, (poupado / meta) * 100) : 0;

        resultDiv.innerHTML = `
            <h3 style="margin-top:0; color:#1e3a8a;">Sua Meta de Reserva: ${formatter.format(meta)}</h3>
            <p style="font-size: 1.1rem; color:#4b5563;">Faltam <strong>${formatter.format(falta)}</strong> para atingir seu objetivo.</p>
            <div style="background:#e5e7eb; border-radius:10px; height:10px; margin:15px 0;">
                <div style="background:#2563eb; height:10px; border-radius:10px; width:${progresso}%"></div>
            </div>
            <small>${progresso.toFixed(0)}% da meta alcançada</small>
        `;
        resultDiv.style.display = 'block';
    }

    inputs.forEach(id => document.getElementById(id).addEventListener('input', calcular));
    calcular(); // Executa ao carregar
  }

  document.addEventListener('astro:page-load', initReservaCalc);
  if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initReservaCalc);
  } else {
      initReservaCalc();
  }
</script>