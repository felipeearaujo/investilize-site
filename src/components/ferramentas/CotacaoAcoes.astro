---

<div class="tool-page">
  <div class="calculator-container">
    <div class="quote-header">
      <span class="icon">üìà</span>
      <h2>Cota√ß√£o de A√ß√µes</h2>
    </div>
    <p class="subtitle">Digite o s√≠mbolo da a√ß√£o (ex: PETR4.SA, VALE3.SA, AAPL)</p>

    <div class="search-box">
      <input type="text" id="symbol-input" placeholder="Ex: PETR4.SA" autocomplete="off" />
      <button id="search-btn">Buscar</button>
    </div>

    <div id="quote-result-container">
      <p class="info-text">Aguardando busca...</p>
    </div>
  </div>
</div>

<style>
  /* Container Principal */
  .tool-page { width: 100%; font-family: sans-serif; }
  
  .calculator-container {
    background-color: white;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    border: 1px solid #f0f0f0;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .quote-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 10px;
  }
  .quote-header h2 { margin: 0; color: #1f2937; }
  .quote-header .icon { font-size: 1.5rem; }

  .subtitle { text-align: center; margin-bottom: 25px; color: #666; font-size: 0.95rem; }

  /* √Årea de Busca */
  .search-box {
    display: flex;
    gap: 10px;
    margin-bottom: 25px;
  }

  input {
    flex-grow: 1;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  input:focus {
    border-color: #7c3aed;
    box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.1);
  }

  button {
    padding: 12px 25px;
    background-color: #7c3aed;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  button:hover { background-color: #6d28d9; }

  /* √Årea de Resultados */
  #quote-result-container {
    background-color: #f8fafc;
    padding: 20px;
    border-radius: 8px;
    min-height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px dashed #e2e8f0;
  }

  .info-text { color: #6b7280; font-size: 0.95rem; }
  .error-text { color: #dc2626; font-weight: 500; }
  
  /* Resultado da A√ß√£o */
  .result-card {
    animation: fadeIn 0.3s ease-in;
    width: 100%;
  }

  .symbol-title { 
    margin: 0; 
    font-size: 1.8rem; 
    color: #111827; 
    font-weight: 800;
    letter-spacing: -0.5px;
  }

  .company-name {
    font-size: 0.9rem;
    color: #6b7280;
    margin-bottom: 10px;
    text-transform: uppercase;
    font-weight: 600;
  }
  
  .price-display { 
    font-size: 2.5rem; 
    font-weight: 700; 
    margin: 5px 0 15px 0; 
    color: #111827; 
  }
  
  .change-badge { 
    display: inline-flex;
    align-items: center;
    gap: 5px;
    font-size: 1.1rem; 
    font-weight: 600; 
    padding: 6px 16px; 
    border-radius: 30px; 
  }
  
  .positive { color: #15803d; background-color: #dcfce7; }
  .negative { color: #b91c1c; background-color: #fee2e2; }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Responsividade */
  @media (max-width: 480px) {
    .search-box { flex-direction: column; }
    button { width: 100%; }
  }
</style>

<script>
  function setupQuoteTool() {
    const symbolInput = document.getElementById('symbol-input');
    const searchBtn = document.getElementById('search-btn');
    const resultContainer = document.getElementById('quote-result-container');

    // Se os elementos n√£o existirem na p√°gina, para a execu√ß√£o.
    if (!symbolInput || !searchBtn || !resultContainer) return;

    async function fetchQuote() {
      // Pega o valor do input (type casting manual para evitar erro de TS no navegador)
      const symbol = (symbolInput as HTMLInputElement).value.trim();
      
      if (!symbol) {
        resultContainer.innerHTML = `<p class="error-text">‚ö†Ô∏è Por favor, digite um c√≥digo (ex: PETR4.SA).</p>`;
        return;
      }

      // Estado de Carregamento
      searchBtn.setAttribute('disabled', 'true');
      searchBtn.textContent = 'Buscando...';
      resultContainer.innerHTML = `<p class="info-text">üîé Buscando cota√ß√£o para <strong>${symbol.toUpperCase()}</strong>...</p>`;
      resultContainer.style.borderStyle = 'solid';

      try {
        // Faz a chamada para a API interna
        const response = await fetch('/api/cotacao', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ symbol: symbol }),
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'N√£o foi poss√≠vel encontrar este ativo.');
        }

        // Processamento dos dados
        const price = parseFloat(data.price);
        const changeValue = parseFloat(data.change);
        const changePercent = parseFloat(data.changePercent.replace('%', ''));
        const quoteSymbol = data.symbol.toUpperCase();
        
        const isPositive = changeValue >= 0;
        const changeClass = isPositive ? 'positive' : 'negative';
        const changeSign = isPositive ? '+' : '';
        const arrow = isPositive ? '‚ñ≤' : '‚ñº';
        
        const BRL = new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' });

        // Renderiza o resultado
        resultContainer.innerHTML = `
          <div class="result-card">
            <h3 class="symbol-title">${quoteSymbol}</h3>
            <div class="price-display">${BRL.format(price)}</div>
            <div class="change-badge ${changeClass}">
               ${arrow} ${changeSign}${changeValue.toFixed(2)} (${changeSign}${changePercent.toFixed(2)}%)
            </div>
            <p style="margin-top: 15px; font-size: 0.8rem; color: #9ca3af;">Atualizado recentemente</p>
          </div>
        `;
        resultContainer.style.borderStyle = 'solid';

      } catch (error) {
        let msg = 'Erro desconhecido.';
        if (error instanceof Error) msg = error.message;
        
        resultContainer.innerHTML = `
          <div style="text-align: center;">
            <p class="error-text">‚ùå ${msg}</p>
            <p style="font-size: 0.85rem; color: #666; margin-top: 5px;">Verifique se o c√≥digo est√° correto (ex: use .SA para Brasil).</p>
          </div>
        `;
        resultContainer.style.borderStyle = 'dashed';
      } finally {
        searchBtn.removeAttribute('disabled');
        searchBtn.textContent = 'Buscar';
      }
    }

    // Event Listeners
    searchBtn.addEventListener('click', fetchQuote);
    symbolInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') fetchQuote();
    });
  }

  // Garante que o script rode tanto no carregamento inicial quanto nas trocas de p√°gina do Astro
  document.addEventListener('astro:page-load', setupQuoteTool);
  if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', setupQuoteTool);
  } else {
      setupQuoteTool();
  }
</script>