---
// src/components/MyImage.astro
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: string | ImageMetadata;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  quality?: number | string;
  format?: string;
  loading?: "eager" | "lazy";
  decoding?: "async" | "sync" | "auto";
}

const { class: className, ...restOfProps } = Astro.props;

// Definições padrão do Investilize
const defaultClasses = "img-fluid shadow-sm";
const combinedClasses = `${defaultClasses} ${className || ''}`.trim();

// Valores padrão para performance
const loading = restOfProps.loading || 'eager';
const decoding = restOfProps.decoding || 'async';
---

<Image 
  class={combinedClasses}
  loading={loading}
  decoding={decoding}
  {...restOfProps} 
/>